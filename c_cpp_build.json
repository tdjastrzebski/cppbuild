{
	"version": 1,
	"params": {
		"buildDir": "build"
	},
	"configurations": [
		{
			"name": "GCC",
			"buildTypes": [
				{
					"name": "debug",
					"params": {
						"buildTypeParams": "-O0 -g"
					}
				},
				{
					"name": "release",
					"params": {
						"buildTypeParams": "-O2 -g0"
					}
				}
			],
			"buildSteps": [
				{
					"name": "C++ Compile Sample Step",
					"filePattern": "**/*.cpp",
					"outputDirectory": "${buildDir}/${buildTypeName}/${fileDirectory}",
					"command": "g++ -c -std=c++17 ${buildTypeParams} (-I[$${includePath}]) (-D$${defines}) (-include [$${forcedInclude}]) [${filePath}] -o [${outputDirectory}/${fileName}.o]"
				},
				{
					"name": "C++ Link Sample Step",
					"fileList": "${buildDir}/${buildTypeName}/**/*.o",
					"command": "g++ [$${filePath}] -o [${buildDir}/${buildTypeName}/main.exe]"
				}
			],
			"problemMatchers": [
				"$gcc"
			]
		},
		{
			"name": "Win32",
			"params": {
				"ScopeCppSDK": "C:/Program Files (x86)/Microsoft Visual Studio/2019/Enterprise/SDK/ScopeCppSDK"
			},
			"buildTypes": [
				{
					"name": "debug",
					"params": {
						"buildTypeParams": "/MDd /Od /RTCsu /Zi /Fd[${buildDir}/${buildTypeName}/main.pdb]",
						"linkTypeParams": "/DEBUG"
					}
				},
				{
					"name": "release",
					"params": {
						"buildTypeParams": "/MD /Ox",
						"linkTypeParams": ""
					}
				}
			],
			"buildSteps": [
				{
					"name": "C++ Compile Sample Step",
					"filePattern": "**/*.cpp",
					"outputDirectory": "${buildDir}/${buildTypeName}/${fileDirectory}",
					"command": "cl.exe ${buildTypeParams} /nologo /EHs /GR /GF /W3 /EHsc /FS /c (/I[$${includePath}]) (/D\"$${defines}\") (/FI[$${forcedInclude}]) [${filePath}] /Fo[${outputDirectory}/${fileName}.o]"
				},
				{
					"name": "C++ Link Sample Step",
					"fileList": "${buildDir}/${buildTypeName}/**/*.o",
					"command": "link.exe /NOLOGO ${linkTypeParams} [$${filePath}] /OUT:[${buildDir}/${buildTypeName}/main.exe] /LIBPATH:[${ScopeCppSDK}/VC/lib] /LIBPATH:[${ScopeCppSDK}/SDK/lib]"
				}
			],
			"problemMatchers": [
				"$msCompile"
			]
		},
		{
			"name": "CLANG",
			"buildTypes": [
				{
					"name": "debug",
					"params": {
						"buildTypeParams": "-O0 -g"
					}
				},
				{
					"name": "release",
					"params": {
						"buildTypeParams": "-O2 -g0"
					}
				}
			],
			"buildSteps": [
				{
					"name": "C++ Compile Sample Step",
					"filePattern": "**/*.cpp",
					"outputDirectory": "${buildDir}/${buildTypeName}/${fileDirectory}",
					"command": "clang++ -c -std=c++17 ${buildTypeParams} (-I[$${includePath}]) (-D$${defines}) (-include [$${forcedInclude}]) [${filePath}] -o [${outputDirectory}/${fileName}.o]"
				},
				{
					"name": "C++ Link Sample Step",
					"fileList": "${buildDir}/${buildTypeName}/**/*.o",
					"command": "clang++ [$${filePath}] -o [${buildDir}/${buildTypeName}/main.exe]"
				}
			],
			"problemMatchers": [
				"$gcc"
			]
		}
	]
}